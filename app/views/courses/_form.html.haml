= simple_form_for @course do |f|

  = f.input :title
  = f.input :description

  .input
    = f.label :author_id
    = f.collection_select :author_id, Author.all, :id, :name

  = f.input :released, as: :date, start_year: 2003, end_year: Date.today.year, user_month_numbers: true
  = f.input :duration, hint: "e.g. 3h 23m"

  .input
    = f.label :company_id, "Company"
    = f.collection_select :company_id, Company.all, :id, :name

  .input
    = f.label :difficulty
    = f.collection_select :difficulty, Course.difficulty_name_options, :first, :last

  = f.submit
